{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "action/*": ["action/*"],
      "beagle-tree/*": ["beagle-tree/*"],
      "beagle-view/*": ["beagle-view/*"],
      "error/*": ["error/*"],
      "legacy/*": ["legacy/*"],
      "logger/*": ["logger/*"],
      "metadata/*": ["metadata/*"],
      "operation/*": ["operation/*"],
      "service/*": ["service/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
